{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution":"node",
        "baseUrl": "./src",
        "paths": {
          "*": ["*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "postbuild.js"],
    "exclude": ["node_modules", "dist"]
}
